<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZCS Asset Management</title>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script> -->
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <!-- <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
     <script src="~/Scripts/jquery.gauge.js"></script> -->

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
        <body>
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container" style="float: left; padding: 10px; width:100%">
                    <div class="row">
                        <button class="navbar-toggler isNotMobile" style="height: 25px;" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent"
                                aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fa fa-bars" aria-hidden="true"></i>
                        </button>
                        <div class="col-lg-2 col-md-12 col-sm-12 center-header">
                            <img height="70px" width="150px" src="~/Content/ic_app.png">
                            <label class="header isNotMobile">ZCS Asset Management</label>
                            @Html.ActionLink("Logout", "Logout", "Home", new { @class = "logout isNotMobile" })
                        </div>
                        <div class="col-lg-8 col-md-12 col-sm-12 isMobile">
                            <label class="header">ZCS Asset Management</label>
                        </div>
                        <div class="col-lg-2 col-md-12 col-sm-12 isMobile">
                            @Html.ActionLink("Logout", "Logout", "Home", new { @class = "logout" })
                        </div>
                    </div>

                    <ul class="collapse list" style="overflow: hidden; width: auto; height: calc(100vh - 65px); list-style: none;" id="navbarToggleExternalContent">
                        <li><label class="waves-effect waves-block menu-item"><i class="fa fa-home sidebar-icon"></i><span class="primery-color">@Html.ActionLink("Dashboard", "Index", "Home")</span></label> </li>
                        <li><label class="waves-effect waves-block menu-item"><i class="fa fa-file-o sidebar-icon"></i><span class="primery-color">@Html.ActionLink("Reports", "Index", "Facility")</span> </label> </li>
                    </ul>
                </div>
            </div>
            <div class="container body-content">
            </div>
            <div id="wrapper" class="row">
                <!-- Sidebar -->
    <div id="sidebar-wrapper" class="sidebar col-lg-2 col-md-2 col-sm-12">
        <div class="menu">
            <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: calc(100vh - 65px);">
                <ul class="list" style="overflow: hidden; width: auto; height: calc(100vh - 65px); list-style: none;">
                    <li>
                        <div class="user-info">
                            <div class="image"><a class=" waves-effect waves-block" href="profile.html"><img alt="User" height="100px" width="100px" src="~/Content/profile_pic.jpg"></a></div>
                            <div class="detail">
                                <h4>Administrator</h4>
                            </div>
                        </div>
                    </li>
                    <li style="margin-bottom: -10px;"><label class="waves-effect waves-block"><i class="fa fa-home sidebar-icon"></i><span><span class="primery-color">@Html.ActionLink("Dashboard", "Index", "Home")</span></span></label> </li>
                    <li style="margin-bottom: -10px;"><label class="waves-effect waves-block"><i class="fa fa-file-o sidebar-icon"></i> @Html.ActionLink("Reports", "Index", "Facility")</label> </li>
                </ul>
            </div>
        </div>
        <footer style="text-align:center;font-size: 11px">
            <p>&copy; @DateTime.Now.Year - ZCS Asset Management</p>
        </footer>
    </div>
    <div class="container body-content  col-lg-10 col-md-10 col-sm-12">
        @RenderBody()
    </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/speedometer")
    @RenderSection("scripts", required: false)
    </body>
</html>
